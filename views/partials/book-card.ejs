<ul class="flex gap-[clamp(1rem,2.5vw,2rem)] p-4 min-w-min">

		<% if(!books || books.length === 0){ %>
		<li>No books available</li>
		<% }else{%>
		<% books.forEach((book) => { %>

		<li class="shrink-0 w-48 max-sm:w-36" data-id="<%= book._id %>">
			<a href="#" class="block bg-gray-700 rounded-lg group cursor-pointer transition-colors hover:bg-white/10 focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-orange-500 focus-visible:ring-offset-2 focus-visible:ring-offset-slate-900" aria-labelledby="book-title-<%= book._id %>" aria-describedby="book-author-<%= book._id %> book-price-<%= book._id %> book-rating-<%= book._id %>">
				<div class="relative overflow-hidden rounded-t-lg bg-slate-700 h-64 max-sm:h-48 shadow-lg group-hover:shadow-2xl group-focus-visible:shadow-2xl transition-all duration-300">
					<img src="/assets/images/thumbnail.avif" alt="Book cover of <%=book.title%>" class="w-full h-full object-cover group-hover:scale-110 group-focus-visible:scale-110 transition-transform duration-300" />

                    <div class="absolute inset-0 bg-black/0 group-hover:bg-black/60 group-focus-visible:bg-black/60 transition-all duration-300 flex flex-col justify-end items-center text-center px-3 py-4">
						<p class="font-bold text-white opacity-0 group-hover:opacity-100 group-focus-visible:opacity-100 transition-opacity duration-300 text-[clamp(0.9rem,0.85rem+0.4vw,1.1rem)]">
							<%= book.title %>
						</p>

						<p class="text-orange-400 opacity-0 group-hover:opacity-100 group-focus-visible:opacity-100 transition-opacity duration-300 text-[clamp(0.7rem,0.65rem+0.3vw,0.85rem)]">
							<%= book.author %>
						</p>
					</div>

				</div>

                <div class="mt-2 px-4 pb-4 pt-2">
					<h4 id="book-title-<%= book._id %>" class="font-semibold text-white truncate text-[clamp(0.9rem,0.85rem+0.4vw,1rem)]">
						<%= book.title %>
					</h4>

					<p id="book-author-<%= book._id %>" class="text-slate-400 truncate text-[clamp(0.75rem,0.7rem+0.3vw,0.85rem)]">
						<%= book.author %>
					</p>

					<div class="flex justify-between items-center mt-2">
						<span id="book-price-<%= book._id %>" class="text-orange-500 font-bold text-[clamp(0.9rem,0.85rem+0.4vw,1rem)]">
							&#8377;<%= book.price %>
						</span>

						<div class="flex items-center gap-1">
							<svg class="w-4 h-4 text-yellow-400" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
								<path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
							</svg>

							<span id="book-rating-<%= book._id %>" class="text-yellow-400 font-semibold text-[clamp(0.75rem,0.7rem+0.3vw,0.85rem)]" aria-label="Rating 9 out of 10">
								<%= book.rating %>
							</span>
						</div>
					</div>
				</div>
			</a>
		</li>

		<%})}%>


	</ul>